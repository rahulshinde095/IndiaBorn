# This file contains environment-specific settings
# Copy to .env.local and fill in your values
# DO NOT commit .env.local to git

# MongoDB Connection
MONGO_CONNECTION_STRING=mongodb+srv://your-user:your-password@cluster.mongodb.net/
MONGO_DATABASE_NAME=IndiabornDb

# Admin Account
ADMIN_EMAIL=admin@indiaborn.com
ADMIN_PASSWORD=your-secure-password

# JWT Settings
JWT_ISSUER=Indiaborn
JWT_AUDIENCE=IndiabornUsers
JWT_SIGNING_KEY=your-secret-signing-key-minimum-32-characters-long
JWT_EXPIRATION_MINUTES=120

# Stripe (Payment Gateway)
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=inr

# SendGrid (Email Service)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDER_EMAIL=noreply@indiaborn.com
SENDER_NAME=INDIABORN

# Application URLs
APP_URL=http://localhost:5184
FRONTEND_URL=http://localhost:3000
SUCCESS_URL=http://localhost:3000/success
CANCEL_URL=http://localhost:3000/cancel

# Environment
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development
